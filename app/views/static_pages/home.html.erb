<%= stylesheet_link_tag 'rating' %>

<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Rails IMDB Clone</h1>
  <div class="row">
    <h3>Genres</h3>
  </div>
  <div class="row">
    <div class="col">
      <% @valid_categories.each do |valid_category| %>
        <% if Category.exists?(:valid_category_id => valid_category.id) %>
          <%= link_to valid_category.name, genre_path(valid_category.name), class: "btn btn-outline-primary text-black" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <br/>
  <div class="row">
    <h3>Movies</h3>
  </div>
  <div class="container">
    <div class="row">
      <% @movies.each do |movie| %>
        <div class="col-md-4">
          <%= render partial: "shared/movie_card", locals: {movie: movie} %>
        </div>
      <% end %>
    </div>
  </div>
  <br/>
  <div class="row justify-content-md-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>