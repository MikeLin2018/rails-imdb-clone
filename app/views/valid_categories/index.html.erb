<p id="notice"><%= notice %></p>

<h1>Valid Categories</h1>

<table>
  <thead>
  <tr>
    <th>Category</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @valid_categories.each do |valid_category| %>
    <tr>
      <td><%= valid_category.name %></td>
      <td><%= link_to 'Edit', edit_valid_category_path(valid_category) %></td>
      <td><%= link_to 'Destroy', valid_category, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Valid Category', new_valid_category_path %>
