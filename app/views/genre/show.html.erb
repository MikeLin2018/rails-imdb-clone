<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Movie Genre:   <%= @genre %></h1>
  <br/>
  <div class="container">
    <div class="row">
      <% @movies.each do |movie| %>
        <div class="col-md-4">
          <%= render partial: "shared/movie_card", locals: {movie: movie} %>
        </div>
      <% end %>
      <% if @movies.length == 0 %>
        Sorry, there is 0 movie in this category.
      <% end %>
    </div>
  </div>
  <br/>
  <div class="row justify-content-md-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>